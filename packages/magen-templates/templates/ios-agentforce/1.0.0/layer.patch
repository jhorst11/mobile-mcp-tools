+//
+//  CredentialProvider.swift
+//  {{projectName}}
+//
+//  Created by {{organization}}
+//
+
+import AgentforceService
+
+/// Credential provider for guest authentication
+/// Implements AgentforceAuthCredentialProviding to supply guest credentials for the Agentforce SDK
+class CredentialProvider: AgentforceAuthCredentialProviding {
+    
+    /// Returns guest authentication credentials
+    /// Guest authentication allows users to start conversations without logging in
+    func getAuthCredentials() -> AgentforceService.AgentforceAuthCredentials {
+        // Guest authentication - no login required
+        // The URL parameter is not used but required by the API
+        return AgentforceAuthCredentials.Guest(url: "https://unused.url")
+    }
+}
