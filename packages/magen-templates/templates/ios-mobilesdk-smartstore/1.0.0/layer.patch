+//
+//  ContactsViewController.swift
+//  {{projectName}}
+//
+//  Created by {{organization}}
+//  Demonstrates SmartStore integration with Salesforce Mobile SDK
+//
+
+import UIKit
+import SalesforceSDKCore
+import MobileSync
+import SmartStore
+import Combine
+import os.log
+
+class ContactsViewController: UITableViewController {
+    
+    // MARK: - Properties
+    
+    private var store: SmartStore?
+    private var dataRows: [[String: Any]] = []
+    private let logger = Logger(subsystem: Bundle.main.bundleIdentifier ?? "com.salesforce.app", category: "ContactsViewController")
+    private var contactsFetchCancellable: AnyCancellable?
+    
+    // MARK: - Lifecycle
+    
+    override func viewDidLoad() {
+        super.viewDidLoad()
+        
+        title = "Contacts"
+        tableView.register(UITableViewCell.self, forCellReuseIdentifier: "ContactCell")
+        
+        // Setup refresh control
+        refreshControl = UIRefreshControl()
+        refreshControl?.addTarget(self, action: #selector(fetchContacts), for: .valueChanged)
+        
+        // Get SmartStore instance
+        if let currentUser = UserAccountManager.shared.currentUserAccount {
+            store = SmartStore.shared(withName: SmartStore.defaultStoreName, forUserAccount: currentUser)
+        }
+        
+        // Initial fetch
+        fetchContacts()
+    }
+    
+    // MARK: - Data Fetching
+    
+    @objc private func fetchContacts() {
+        guard let currentUser = UserAccountManager.shared.currentUserAccount else {
+            logger.error("Failed to get user account")
+            refreshControl?.endRefreshing()
+            return
+        }
+        
+        // Query Salesforce for Contacts (including Id field as per documentation)
+        let soql = "SELECT Id, Name FROM Contact ORDER BY Name LIMIT 10"
+        let request = RestClient.shared.request(forQuery: soql, apiVersion: nil)
+        
+        contactsFetchCancellable = RestClient.shared.publisher(for: request)
+            .receive(on: RunLoop.main)
+            .sink(receiveCompletion: { [weak self] completion in
+                guard let self = self else { return }
+                if case .failure(let error) = completion {
+                    self.logger.error("REST API error: \(error.localizedDescription)")
+                    self.refreshControl?.endRefreshing()
+                    self.showError(message: "Failed to fetch contacts: \(error.localizedDescription)")
+                }
+            }, receiveValue: { [weak self] response in
+                guard let self = self else { return }
+                do {
+                    let json = try response.asJson()
+                    self.handleSuccess(response: json as? [String: Any])
+                } catch {
+                    self.logger.error("Failed to parse JSON: \(error.localizedDescription)")
+                    self.refreshControl?.endRefreshing()
+                    self.showError(message: "Failed to parse response")
+                }
+            })
+    }
+    
+    private func handleSuccess(response: [String: Any]?) {
+        guard let records = response?["records"] as? [[String: Any]] else {
+            logger.error("Invalid response format")
+            DispatchQueue.main.async {
+                self.refreshControl?.endRefreshing()
+            }
+            return
+        }
+        
+        // Check if Contact soup exists
+        guard let store = store, store.soupExists(forName: "Contact") else {
+            logger.error("Contact soup does not exist")
+            DispatchQueue.main.async {
+                self.refreshControl?.endRefreshing()
+                self.showError(message: "SmartStore not properly configured. Contact soup is missing.")
+            }
+            return
+        }
+        
+        // Upsert the retrieved records into SmartStore
+        let entries = records.map { record -> [String: Any] in
+            return [
+                "Id": record["Id"] as? String ?? "",
+                "Name": record["Name"] as? String ?? ""
+            ]
+        }
+        
+        store.upsert(entries: entries, forSoupNamed: "Contact")
+        logger.info("Successfully upserted \(entries.count) contacts to SmartStore")
+        
+        // Load data from SmartStore to populate the view
+        loadFromStore()
+    }
+    
+    // MARK: - SmartStore Query
+    
+    private func loadFromStore() {
+        // Build Smart SQL query to extract Name values from Contact soup
+        if let querySpec = QuerySpec.buildSmartQuerySpec(
+            smartSql: "SELECT {Contact:Name} FROM {Contact} ORDER BY {Contact:Name} LIMIT 10",
+            pageSize: 10
+        ) {
+            // Verify SmartStore handle
+            guard let store = store else {
+                logger.error("SmartStore instance is nil")
+                DispatchQueue.main.async {
+                    self.refreshControl?.endRefreshing()
+                }
+                return
+            }
+            
+            // Run the SmartStore query
+            do {
+                let results = try store.query(using: querySpec, startingFromPageIndex: 0)
+                
+                // Transfer names to dataRows
+                if let rows = results as? [[Any]] {
+                    dataRows = rows.map { row in
+                        let name = row.first as? String ?? "Unknown"
+                        return ["Name": name]
+                    }
+                    
+                    logger.info("Loaded \(self.dataRows.count) contacts from SmartStore")
+                    
+                    // Refresh view on main thread
+                    DispatchQueue.main.async {
+                        self.tableView.reloadData()
+                        self.refreshControl?.endRefreshing()
+                    }
+                }
+            } catch {
+                logger.error("SmartStore query failed: \(error.localizedDescription)")
+                DispatchQueue.main.async {
+                    self.refreshControl?.endRefreshing()
+                    self.showError(message: "Failed to load from SmartStore: \(error.localizedDescription)")
+                }
+            }
+        }
+    }
+    
+    // MARK: - UITableViewDataSource
+    
+    override func tableView(_ tableView: UITableView, numberOfRowsInSection section: Int) -> Int {
+        return dataRows.count
+    }
+    
+    override func tableView(_ tableView: UITableView, cellForRowAt indexPath: IndexPath) -> UITableViewCell {
+        let cell = tableView.dequeueReusableCell(withIdentifier: "ContactCell", for: indexPath)
+        let contact = dataRows[indexPath.row]
+        cell.textLabel?.text = contact["Name"] as? String ?? "Unknown"
+        return cell
+    }
+    
+    // MARK: - Helper Methods
+    
+    private func showError(message: String) {
+        let alert = UIAlertController(title: "Error", message: message, preferredStyle: .alert)
+        alert.addAction(UIAlertAction(title: "OK", style: .default))
+        present(alert, animated: true)
+    }
+}
