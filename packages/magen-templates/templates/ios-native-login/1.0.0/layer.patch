+                SalesforceManager.shared.nativeLoginManager().fallbackToWebAuthentication()
+            }
+            .buttonStyle(.bordered)
+            .tint(colorScheme == .dark ? .white : .blue)
+            
+            Spacer()
+        }
+        .padding()
+        // MARK: - STYLING HINT: Blur Effect
+        // Customize blur effect during authentication:
+        // - Adjust blur radius: change 2.0 value
+        // - Remove blur: set radius to 0.0 or remove modifier
+        .blur(radius: isAuthenticating ? 2.0 : 0.0)
