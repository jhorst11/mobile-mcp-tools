+import SwiftUI
+import SalesforceSDKCore
+
+struct NativeLoginView: View {
+    @Environment(\.colorScheme) var colorScheme
+    
+    // MARK: User Messaging
+    
+    /// Indicates if the message displayed to the user is informational or an error
+    @State private var isMessageError = false
+    
+    /// A message displayed to the user
+    @State private var messageText = ""
+    
+    // MARK: Common User Interface State
+    
+    /// An option to display indicators when an identity action is in progress
+    @State private var isAuthenticating = false
+    
+    /// The user's entered password
