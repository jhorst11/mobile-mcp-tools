{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/salesforce/mobile-mcp-tools-2/schemas/template.schema.json",
  "title": "Magen Template Descriptor",
  "description": "Schema for template.json files in the Magen templating system",
  "type": "object",
  "required": ["name", "platform", "version"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Unique identifier for the template",
      "examples": ["ios-base", "ios-mobilesdk", "ios-mobilesdk-login"]
    },
    "platform": {
      "type": "string",
      "minLength": 1,
      "description": "Target platform for the template",
      "examples": ["ios", "android", "web"],
      "enum": ["ios", "android", "web"]
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of the template (e.g., 1.0.0)",
      "examples": ["1.0.0", "0.1.0", "2.3.1"]
    },
    "description": {
      "type": "string",
      "description": "Human-readable description of the template",
      "examples": [
        "Base iOS application template using SwiftUI",
        "iOS app with Salesforce Mobile SDK integration"
      ]
    },
    "extends": {
      "type": "object",
      "description": "Parent template configuration for layered templates. Specifies which template this one is based on, the specific version, and how to apply changes.",
      "required": ["template", "version", "patchFile"],
      "properties": {
        "template": {
          "type": "string",
          "minLength": 1,
          "description": "Name of the parent template",
          "examples": ["ios-base", "ios-mobilesdk"]
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "description": "Specific version of the parent template this layer is compatible with (semver format). REQUIRED to ensure version compatibility.",
          "examples": ["1.0.0", "2.1.3"]
        },
        "patchFile": {
          "type": "string",
          "minLength": 1,
          "description": "Path to the git patch file containing changes from the parent template",
          "default": "layer.patch",
          "examples": ["layer.patch", "customizations.patch"]
        }
      }
    },
    "tags": {
      "type": "array",
      "description": "Searchable tags for categorizing and filtering templates",
      "items": {
        "type": "string"
      },
      "uniqueItems": true,
      "examples": [
        ["ios", "swift", "base"],
        ["ios", "swift", "salesforce", "mobile-sdk", "oauth"]
      ]
    },
    "generation": {
      "type": "object",
      "description": "Advanced generation configuration",
      "properties": {
        "fileTransforms": {
          "type": "array",
          "description": "Custom file transformation rules",
          "items": {
            "type": "object",
            "required": ["pattern", "processor"],
            "properties": {
              "pattern": {
                "type": "string",
                "minLength": 1,
                "description": "Glob pattern to match files",
                "examples": ["*.swift", "**/*.json", "src/**"]
              },
              "processor": {
                "type": "string",
                "enum": ["handlebars", "copy"],
                "description": "How to process matched files",
                "default": "handlebars"
              }
            }
          }
        },
        "fileOperations": {
          "type": "array",
          "description": "File operations to perform during generation",
          "items": {
            "type": "object",
            "required": ["action", "from"],
            "properties": {
              "action": {
                "type": "string",
                "enum": ["delete"],
                "description": "Operation to perform"
              },
              "from": {
                "type": "string",
                "minLength": 1,
                "description": "Glob pattern matching files to operate on",
                "examples": ["*.tmp", "**/.DS_Store"]
              }
            }
          }
        }
      }
    }
  },
  "additionalProperties": false
}
