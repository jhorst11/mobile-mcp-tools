{
    "variables": [
        {
            "name": "projectName",
            "type": "string",
            "required": true,
            "description": "The display name of the application",
            "default": "Salesforce App"
        },
        {
            "name": "bundleIdentifier",
            "type": "string",
            "required": true,
            "description": "Bundle identifier for the iOS app",
            "default": "com.salesforce.myapp",
            "regex": "^[a-z][a-z0-9]*(\\.[a-z][a-z0-9]*)+$"
        },
        {
            "name": "organization",
            "type": "string",
            "required": true,
            "description": "The organization name of the iOS application",
            "default": "Salesforce Inc."
        },
        {
            "name": "orgId",
            "type": "string",
            "required": true,
            "description": "Salesforce organization ID",
            "regex": "^[0-9A-Za-z]{15,18}$"
        },
        {
            "name": "environment",
            "type": "string",
            "required": false,
            "description": "Deployment environment",
            "default": "production",
            "enum": [
                "development",
                "staging",
                "production"
            ]
        }
    ]
}

