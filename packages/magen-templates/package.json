{
  "name": "@salesforce/magen-templates",
  "version": "0.0.1",
  "type": "module",
  "files": [
    "dist",
    "templates",
    "README.md"
  ],
  "description": "Layered, platform-agnostic app templating engine for mobile development",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "magen-template": "./dist/cli/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc --build",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "lint": "eslint --max-warnings 0 --config ../../eslint.config.mjs \"{src,tests}/**/*.ts\"",
    "format": "prettier --write \"{src,tests}/**/*.ts\" \"*.{json,md}\""
  },
  "dependencies": {
    "chokidar": "^5.0.0",
    "handlebars": "^4.7.8",
    "minimatch": "^10.1.1",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/chokidar": "^1.7.5",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^24.8.1",
    "@vitest/coverage-v8": "^3.2.4",
    "typescript": "^5.9.3",
    "vitest": "^3.2.3"
  }
}
